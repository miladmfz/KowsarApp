<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_table_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_card"
        android:layout_margin="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="@string/tableitem_name"
                    android:layout_margin="3dp"

                    android:textColor="?attr/colorOnBackground" />

                <TextView
                    android:id="@+id/ord_table_c_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:layout_margin="3dp"

                    android:textColor="?attr/colorOnBackground" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ord_table_c_placecount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:layout_margin="3dp"

                    android:textColor="?attr/colorOnBackground" />

                <Button
                    android:id="@+id/ord_table_c_cleartable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="@string/tableitem_setfree"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="?attr/colorPrimaryVariant"
                    android:textColor="?attr/colorOnPrimary" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ord_table_c_ll_mizexplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:visibility="visible"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/tableitem_tableexplain"
                android:textSize="12sp"
                android:textStyle="bold"

                android:textColor="?attr/colorOnBackground" />
            />


            <TextView
                android:id="@+id/ord_table_c_mizexplain"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:textSize="16sp"
                android:textStyle="bold"

                android:textColor="?attr/colorOnBackground" />
            />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ord_table_c_ll_infoexplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:visibility="visible"

            android:textColor="?attr/colorOnBackground"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/tableitem_infoexplain"
                android:textSize="12sp"
                android:textStyle="bold"

                android:textColor="?attr/colorOnBackground"/>


            <TextView
                android:id="@+id/ord_table_c_infoexplain"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:textSize="16sp"
                android:textStyle="bold"

                android:textColor="?attr/colorOnBackground"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ord_table_c_ll_timebroker"
            android:background="?attr/colorSecondary"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:ignore="DisableBaselineAlignment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="@string/tableitem_usetime"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights"
                    android:textColor="?attr/colorOnSecondary"/>

                <TextView
                    android:id="@+id/ord_table_c_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    android:textColor="?attr/colorOnSecondary"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="@string/tableitem_brokerstate"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights"
                    android:textColor="?attr/colorOnSecondary"/>

                <TextView
                    android:id="@+id/ord_table_c_brokername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ord_table_c_ll_reserve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                tools:ignore="UselessParent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/tableitem_reserve"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"

                            android:textColor="?attr/colorOnBackground" />

                        <TextView
                            android:id="@+id/ord_table_c_reservestart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"

                            android:textColor="?attr/colorOnBackground" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/ord_table_c_reservebrokername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        android:textColor="?attr/colorOnBackground" />


                    <TextView
                        android:id="@+id/ord_table_c_reservemobileno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        android:textColor="?attr/colorOnBackground" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ord_table_c_select"
                android:text="@string/tableitem_selecttable"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/ord_table_c_btnreserve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="@string/tableitem_reservetable"
                android:layout_margin="3dp"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />



        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


        </androidx.appcompat.widget.LinearLayoutCompat>


        <LinearLayout
            android:id="@+id/ord_table_c_ll_print_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ord_table_c_changemiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="@string/tableitem_changetable"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/ord_table_c_explainedit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="@string/tableitem_explinbtn"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />

            <Button
                android:id="@+id/ord_table_c_print"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="@string/tableitem_print"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />


        </LinearLayout>

<!--        <androidx.viewpager.widget.ViewPager-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="4dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:background="@color/colorPrimary" />-->

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>