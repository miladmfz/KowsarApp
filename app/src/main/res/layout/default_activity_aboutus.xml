<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.base.Base_AboutUsActivity"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <!-- AppBar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/b_aboutus_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="?attr/colorOnPrimary"
            app:title="@string/aboutus"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Card View -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp">

        <!-- Main Content Layout -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:gravity="center">

            <!-- Logo -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/img_base_kits"
                android:layout_marginBottom="20dp"
                android:layout_margin="10dp"/>

            <!-- Address -->
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aboutus_address"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="10dp" />

            <!-- Phone Number -->

            <!-- Email -->
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aboutus_email"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="شماره تماس شرکت : 02191070120"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مدیریت جانبکلو : 09126863070"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="10dp" />

            <!-- Download Link -->
            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="download_new_version"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/deep_purple_500"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:drawableBottom="@drawable/ic_download_24"
                android:drawablePadding="8dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>
