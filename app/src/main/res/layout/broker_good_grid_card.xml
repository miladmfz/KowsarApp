<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/broker_good_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_1000"
    app:cardElevation="4dp"
    android:checkable="true"
    android:layoutDirection="rtl"
    app:checkedIconTint="@color/red_800"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/b_good_c_ggg">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/b_good_c_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_round_grey"

                    tools:ignore="ContentDescription" />
            </FrameLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/b_good_c_mainline">

            </androidx.appcompat.widget.LinearLayoutCompat>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <Button
            android:id="@+id/b_good_c_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:text="@string/detail_buy"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/green_600"
            app:icon="@drawable/ic_add_shopping_black"
            app:iconTint="@color/white"
            app:strokeColor="@color/grey_1000"
            app:strokeWidth="1dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>