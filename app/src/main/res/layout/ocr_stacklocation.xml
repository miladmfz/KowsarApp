<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ocr_stacklocation_explain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bg_card"
    android:elevation="4dp"
    android:layout_margin="5dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/ocr_stacklocation_goodname_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:gravity="center"
        android:inputType="text"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        android:singleLine="true"
        android:text="نام کالا" />


    <EditText
        android:id="@+id/ocr_stacklocation_explain_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:padding="12dp"
        android:background="@drawable/bg_editbox"
        android:hint="توضیحات کالا را وارد کنید"
        android:textColor="?attr/colorOnBackground"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLines="4"
        android:gravity="center" />


    <Button
        android:id="@+id/ocr_stacklocation_explain_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="اعمال"
        android:layout_margin="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary" />

</androidx.appcompat.widget.LinearLayoutCompat>