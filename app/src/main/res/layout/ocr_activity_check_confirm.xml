<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ocr.Ocr_Check_Confirm_Activity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:id="@+id/ocr_check_confirm_a_barcode"
                android:background="@drawable/bg_editbox"
                android:layout_margin="2dp"
                android:visibility="visible"
                android:hint="جستجو ..."
                android:textColor="?attr/colorOnBackground"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ocr_check_confirm_a_good_prog"
                style="?android:attr/progressBarStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading"
                android:visibility="gone"/>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ocr_check_confirm_a_good_lottie"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/notfind"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ocr_check_confirm_a_good_tvstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:visibility="gone"
                android:textColor="?attr/colorOnBackground"
                />
            <FrameLayout
                android:id="@+id/ocr_check_confirm_a_framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOnBackground">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ocr_check_confirm_a_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewforwidth_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="?attr/colorOnBackground"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>