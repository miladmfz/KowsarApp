<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/broker_good_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_1000"
    android:checkable="true"
    android:layoutDirection="rtl"
    app:checkedIconTint="@color/red_800">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/b_good_c_mainline">

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/b_good_c_ggg"
        android:weightSum="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_good_c_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.38"
            android:layout_margin="2dp"
            android:text="خرید"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/green_600"
            app:icon="@drawable/ic_add_shopping_black"
            app:iconTint="@color/white"
            app:strokeColor="@color/grey_1000"
            app:strokeWidth="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.22">
            <TextView
                android:id="@+id/b_good_c_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="goodname"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/b_good_c_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="amount"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    />
                <TextView
                    android:id="@+id/b_good_c_maxsellprice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="price"
                    android:textColor="#E61243"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <ImageView

            android:layout_margin="3dp"
            android:id="@+id/b_good_c_img"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_weight="0.4"/>



    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>