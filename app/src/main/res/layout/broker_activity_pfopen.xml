<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.broker.Broker_PFOpenActivity"
    android:orientation="vertical"
    android:background="@color/grey_200"
    android:padding="2dp"
    android:layoutDirection="rtl">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/b_pfopen_a_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/b_pfopen_a_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"

            android:background="?attr/colorPrimary"
            android:layout_gravity="center"
            app:titleTextColor="@color/white"
            app:title="انتخاب فاکتور">

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/b_pfopen_a_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="8dp"
        android:text="@string/insert_prefactor"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/green_600"
        style="?attr/materialButtonOutlinedStyle" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_round"
        android:padding="8dp"
        android:layout_marginVertical="8dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="@string/open_amountprefactor"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/b_pfopen_a_amount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Button
            android:id="@+id/b_pfopen_a_deleteempty"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.4"
            android:layout_marginHorizontal="4dp"
            android:text="@string/open_deleteprefactor"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/red_600"
            style="?attr/materialButtonOutlinedStyle"/>


        <Button
            android:id="@+id/b_pfopen_a_refresh"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/refresh"
            android:layout_weight="0.4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/b_pfopen_a_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round"
        android:padding="8dp"
        android:layout_marginVertical="8dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>