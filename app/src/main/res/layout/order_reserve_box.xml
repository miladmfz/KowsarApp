<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_reserve_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:layoutDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ord_reserve_b_rstmiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"

                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_name"
                    tools:ignore="NestedWeights"
                    android:textColor="?attr/colorOnBackground"/>

                <EditText

                    android:id="@+id/ord_reserve_b_personname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:autofillHints=""
                    android:background="@drawable/bg_editbox"
                    android:gravity="center"
                    android:hint="@string/reservebox_name"
                    android:textSize="20sp"
                    tools:ignore="TextFields"
                    android:textColor="?attr/colorOnBackground"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_mobile"
                    tools:ignore="NestedWeights"
                    android:textColor="?attr/colorOnBackground"/>

                <EditText

                    android:id="@+id/ord_reserve_b_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:autofillHints=""
                    android:background="@drawable/bg_editbox"
                    android:gravity="center"
                    android:hint="@string/reservebox_mobile"
                    android:textSize="20sp"
                    tools:ignore="TextFields"
                    android:textColor="?attr/colorOnBackground"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_explain"
                    tools:ignore="MissingPrefix,NestedWeights"
                    android:textColor="?attr/colorOnBackground"/>

                <EditText

                    android:id="@+id/ord_reserve_b_explain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:autofillHints=""
                    android:background="@drawable/bg_editbox"
                    android:gravity="center"
                    android:hint="@string/reservebox_explain"
                    android:textSize="20sp"
                    tools:ignore="TextFields"
                    android:textColor="?attr/colorOnBackground"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_starttime"
                    tools:ignore="NestedWeights"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView

                    android:id="@+id/ord_reserve_b_reservestart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_editbox"
                    android:gravity="center"
                    android:hint="@string/reservebox_starttime"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_endtime"
                    tools:ignore="NestedWeights"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/ord_reserve_b_reserveend"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_editbox"
                    android:gravity="center"
                    android:hint="@string/reservebox_endtime"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_date"
                    tools:ignore="NestedWeights"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/ord_reserve_b_date"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_editbox"
                    android:gravity="center"
                    android:hint="@string/reservebox_date"
                    android:textSize="20sp"

                    android:textColor="?attr/colorOnBackground"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ord_reserve_b_btnsend"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/reservebox_setreservebtn"
                    android:layout_margin="3dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary" />


            </LinearLayout>

            <TextView
                android:id="@+id/ord_reserve_b_statetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="?attr/colorSecondary"
                android:gravity="center"
                android:text="@string/reservebox_tvlisttitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSecondary"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ord_reserve_b_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>