<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/b_spinner_prog"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:background="@drawable/bg_round_card"
    android:layoutDirection="rtl"
    android:elevation="8dp">

    <!-- Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/b_spinner_lottie"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_gravity="center" />

    <!-- Primary Text -->
    <TextView
        android:id="@+id/b_spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingBottom="8dp" />

    <!-- Step Text -->
    <TextView
        android:id="@+id/b_spinner_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/grey_700"
        android:visibility="gone" />

    <!-- Action Button -->
    <Button
        android:id="@+id/b_spinner_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:text="امتحان مجدد"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/blue_500"
        android:visibility="gone"
        android:elevation="4dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
