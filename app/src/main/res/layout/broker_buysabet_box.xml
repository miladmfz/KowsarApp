<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/b_buysabet_box"
    android:background="@drawable/bg_card"
    android:layout_margin="2dp"
    android:padding="16dp"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/b_buysabet_factorname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/customerfactorheader"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:padding="8dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/amount"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"/>

        <EditText
            android:id="@+id/b_buysabet_amount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="@string/amount"
            android:background="@drawable/bg_editbox"
            android:textColor="?attr/colorOnBackground"
            android:inputType="number"
            android:textSize="16sp"
            android:padding="8dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/boxbuy_price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"/>

        <EditText
            android:id="@+id/b_buysabet_price"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="@string/boxbuy_price"
            android:background="@drawable/bg_editbox"
            android:inputType="number"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="?attr/colorOnBackground"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/boxbuy_total"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"/>

        <TextView
            android:id="@+id/b_buysabet_sumprice"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="@string/boxbuy_total"
            android:background="@drawable/bg_editbox"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="?attr/colorOnBackground"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/boxbuy_hasamount"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"/>

        <TextView
            android:id="@+id/b_buysabet_facamount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@drawable/bg_editbox"
            android:textSize="16sp"
            android:hint="@string/boxbuy_hasamount"

            android:padding="8dp"
            android:textColor="?attr/colorOnBackground"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <Button
        android:id="@+id/b_buysabet_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/detail_buy"
        android:layout_margin="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary" />
</androidx.appcompat.widget.LinearLayoutCompat>
