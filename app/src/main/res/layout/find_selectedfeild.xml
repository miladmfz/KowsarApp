<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_selectedfeild"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bg_card"
    android:layout_margin="5dp"
    android:elevation="4dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/find_select_c_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:padding="14dp"
        android:gravity="center"
        android:inputType="text"
        android:textColor="?attr/colorOnBackground"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:singleLine="true"
        android:text="عنوان کالا" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="نام کالا"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:textColor="?attr/colorOnBackground"/>

        <EditText
            android:id="@+id/find_select_c_et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_weight="0.3"
            android:padding="12dp"
            android:background="@drawable/bg_editbox"
            android:hint="نام کالا را وارد کنید"
            android:textColor="?attr/colorOnBackground"
            android:textColorHint="@color/secondaryTextColor"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="4"
            android:gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="قیمت"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:textColor="?attr/colorOnBackground"/>

        <EditText
            android:id="@+id/find_select_c_et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_weight="0.3"
            android:padding="12dp"
            android:background="@drawable/bg_editbox"
            android:hint="قیمت را وارد کنید"
            android:textColor="?attr/colorOnBackground"
            android:textColorHint="@color/secondaryTextColor"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="4"
            android:gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="قفسه"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:textColor="?attr/colorOnBackground"/>

        <EditText
            android:id="@+id/find_select_c_et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_weight="0.3"
            android:padding="12dp"
            android:background="@drawable/bg_editbox"
            android:hint="قفسه را وارد کنید"
            android:textColor="?attr/colorOnBackground"
            android:textColorHint="@color/secondaryTextColor"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="4"
            android:gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="نرخ 6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:textColor="?attr/colorOnBackground"/>

        <EditText
            android:id="@+id/find_select_c_et4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_weight="0.3"
            android:padding="12dp"
            android:background="@drawable/bg_editbox"
            android:hint="نرخ 6 را وارد کنید"
            android:textColor="?attr/colorOnBackground"
            android:textColorHint="@color/secondaryTextColor"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="4"
            android:gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/find_select_c_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="اعمال"
        android:layout_margin="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary" />

</androidx.appcompat.widget.LinearLayoutCompat>
