<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ocr_gooddetail_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:padding="16dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp">


            <ImageView
                android:id="@+id/ocr_gooddetail_b_img"
                android:layout_width="match_parent"
                android:layout_height="350sp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"

                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ocr_gooddetail_b_btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="تایید کالا"
                    android:layout_margin="3dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"
                    android:layout_weight="0.3"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ocr_gooddetail_b_btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="لغو کالا"
                    android:layout_margin="3dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="@color/red_300"
                    android:textColor="?attr/colorOnPrimary"
                    android:layout_weight="0.7"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ocr_gooddetail_ll_lb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_round">

                <TextView
                    android:id="@+id/ocr_gooddetail_b_lb1"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="موجودی کل"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_gooddetail_b_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <!-- Row: قطع -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ocr_gooddetail_ll_lb2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_round">

                <TextView
                    android:id="@+id/ocr_gooddetail_b_lb2"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="قطع"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_gooddetail_b_tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Row: نوع جلد -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ocr_gooddetail_ll_lb3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_round">

                <TextView
                    android:id="@+id/ocr_gooddetail_b_lb3"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="نوع جلد"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_gooddetail_b_tv3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="22sp"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Row: پشت جلد -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ocr_gooddetail_ll_lb4"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_round">

                <TextView
                    android:id="@+id/ocr_gooddetail_b_lb4"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="پشت جلد"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_gooddetail_b_tv4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Row: شماره قفسه -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ocr_gooddetail_ll_lb5"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@drawable/bg_round"
                android:layout_marginBottom="8dp"

                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/ocr_gooddetail_b_lb5"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="شماره قفسه"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_gooddetail_b_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Row: شماره قفسه -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ocr_gooddetail_ll_lb6"
                android:background="@drawable/bg_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="8dp"

                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/ocr_gooddetail_b_lb6"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="شماره قفسه"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_gooddetail_b_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Row: شماره قفسه -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ocr_gooddetail_ll_lb7"
                android:background="@drawable/bg_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="8dp"

                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/ocr_gooddetail_b_lb7"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text=" کد کالا"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_gooddetail_b_tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>
