<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.broker.Broker_RegistrationActivity"
    android:orientation="vertical"
    android:layoutDirection="rtl">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/b_register_a_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:title="تفییر اطلاعات"

            app:titleTextColor="@color/white"
            android:background="?attr/colorPrimary">

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="7dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">


                    <Button
                        android:id="@+id/b_register_a_btn"
                        android:layout_width="match_parent"
                        android:text="@string/reg_save"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        app:backgroundTint="@color/green_600"
                        app:strokeColor="@color/grey_1000"
                        app:strokeWidth="1dp"
                        style="?attr/materialButtonOutlinedStyle"
                        />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="اسم مجموعه : " />

                        <TextView
                            android:layout_weight="0.5"
                            android:id="@+id/b_register_a_dbname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"

                            tools:ignore="LabelFor" />


                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/b_register_a_replicationcolumn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="تنظیمات پیشفرض"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_weight="0.5"
                            app:backgroundTint="@color/cyan_500"
                            app:strokeColor="@color/grey_1000"
                            app:strokeWidth="1dp"
                            style="?attr/materialButtonOutlinedStyle"
                            />
                        <Button
                            android:id="@+id/b_register_a_basedelete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text=" بارگیری مجدد"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_weight="0.5"
                            app:backgroundTint="@color/amber_900"
                            app:strokeColor="@color/grey_1000"
                            app:strokeWidth="1dp"
                            style="?attr/materialButtonOutlinedStyle"
                            />

                        <Button
                            android:id="@+id/b_register_a_totaldelete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="حذف کلی اطلاعات"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_weight="0.5"
                            app:backgroundTint="@color/red_700"
                            app:strokeColor="@color/grey_1000"
                            app:strokeWidth="1dp"
                            style="?attr/materialButtonOutlinedStyle"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/b_register_a_line_manage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp">

                            <TextView
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/config_broker" />

                            <EditText
                                android:layout_weight="0.5"
                                android:id="@+id/b_register_a_broker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittest1"
                                android:gravity="center"

                                android:inputType="numberDecimal"
                                tools:ignore="LabelFor"
                                 />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="نام بازایاب" />

                            <Spinner
                                android:id="@+id/b_register_a_spinnerbroker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/config_delay" />

                            <EditText
                                android:layout_weight="0.5"
                                android:id="@+id/b_register_a_delay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittest1"

                                android:inputType="text"
                                tools:ignore="LabelFor"
                                android:gravity="center" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/config_item"
                                android:layout_weight="0.5" />

                            <EditText
                                android:id="@+id/b_register_a_grid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittest1"
                                android:layout_weight="0.5"
                                android:inputType="numberDecimal"
                                android:maxLength="1"
                                android:gravity="center"
                                tools:ignore="LabelFor" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/config_real_amount"
                                android:layout_weight="0.5" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/b_register_a_real_amount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:visibility="invisible" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp">
                            <TextView
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="سایز عنوان ها" />

                            <EditText
                                android:layout_weight="0.5"
                                android:id="@+id/b_register_a_titlesize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittest1"

                                android:inputType="text"
                                tools:ignore="LabelFor"
                                android:gravity="center" />
                            <TextView
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="سایز اطلاعات" />

                            <EditText
                                android:layout_weight="0.5"
                                android:id="@+id/b_register_a_bodysize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittest1"

                                android:inputType="text"
                                tools:ignore="LabelFor"
                                android:gravity="center" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="نمایش اعتبار مشتری"
                                android:layout_weight="0.5" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/b_register_a_customercredit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:visibility="invisible" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="سرویس کوثر"
                                android:layout_weight="0.5" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/b_register_a_kowsarservice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:visibility="invisible" />


                        </androidx.appcompat.widget.LinearLayoutCompat>




                    </androidx.appcompat.widget.LinearLayoutCompat>




                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="بروز رسانی خودکار"
                            android:layout_weight="0.5" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/b_register_a_autorep"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:visibility="invisible" />


                    </androidx.appcompat.widget.LinearLayoutCompat>



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="نمایش خطی کالا"
                            android:layout_weight="0.5" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/b_register_a_lineview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:visibility="invisible" />


                    </androidx.appcompat.widget.LinearLayoutCompat>



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/config_off"
                            android:layout_weight="0.5" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/b_register_a_selloff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:visibility="invisible" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="بسته شدن کیبورد"
                            android:layout_weight="0.5" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/b_register_a_keyboardrunnable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:visibility="invisible" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="نمایش خصوصیات"
                            android:layout_weight="0.5" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/b_register_a_showdetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:visibility="invisible" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="شماره تلفن همراه" />

                        <EditText
                            android:layout_weight="0.5"
                            android:id="@+id/b_register_a_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittest1"

                            android:inputType="text"
                            tools:ignore="LabelFor"
                            android:gravity="center" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>