<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/broker_pfopenitem_card"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:layout_margin="2dp"
        android:layout_weight="1">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/prefactor_date"
                    android:gravity="center"

                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/b_pfopenitem_c_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/prefactor_date"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/prefactor_code"

                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/b_pfopenitem_c_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/prefactor_code"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>


            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/prefactor_time"
                    android:gravity="center"

                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/b_pfopenitem_c_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/prefactor_time"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/buy_rows"
                    android:gravity="center"

                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/b_pfopenitem_c_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/buy_rows"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>


            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/buy_totalamount"
                    android:gravity="center"

                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/b_pfopenitem_c_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/buy_totalamount"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/totalfactorheader"
                    android:gravity="center"

                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/b_pfopenitem_c_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/totalfactorheader"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"/>


            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/customerfactorheader"
                android:gravity="center"

                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"/>

            <TextView
                android:id="@+id/b_pfopenitem_c_customer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="@string/customerfactorheader"

                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/prefactor_explain"
                android:gravity="center"

                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"/>


            <TextView
                android:id="@+id/b_pfopenitem_c_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="@string/prefactor_explain"

                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"/>


        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red_900" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>