<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ocr_manage_listapi_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"

    android:layoutDirection="rtl">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ocr_manage_listapi_c_ll_main"
            android:layout_margin="3dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="نام :"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ocr_manage_listapi_c_customer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ocr_manage_listapi_c_customercode"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"/>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/ocr_manage_listapi_c_ll_ocrexplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="جمع آوری:"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/ocr_manage_listapi_c_ocrexplain"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"/>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/ocr_manage_listapi_c_ll_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="توضیحات :"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ocr_manage_listapi_c_explain"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"/>





            </LinearLayout>


            <LinearLayout
                android:id="@+id/ocr_manage_listapi_c_ll_state"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:visibility="gone"
                >


                <TextView
                    android:id="@+id/ocr_manage_listapi_c_hasshortage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="#FF0000"
                    android:textSize="20sp"
                    android:gravity="center"
                    />


                <TextView
                    android:id="@+id/ocr_manage_listapi_c_hasedited"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="#FF0000"
                    android:textSize="20sp"
                    android:gravity="center"
                    />


            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:layout_weight="0.4">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="31dp"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:text="کد فاکتور:"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/ocr_manage_listapi_c_privatecode"
                        android:background="@drawable/bg_editbox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>
                <TextView
                    android:id="@+id/ocr_manage_listapi_c_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:layout_weight="0.6"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="?attr/colorOnBackground"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"

                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="31dp"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:text="تاریخ سفارش:"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ocr_manage_listapi_c_kowsardate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:background="@drawable/bg_editbox"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/ocr_manage_listapi_c_stackclass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/ocr_manage_listapi_c_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="نمایش فاکتور"
                    android:layout_margin="3dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary" />






            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimary" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>