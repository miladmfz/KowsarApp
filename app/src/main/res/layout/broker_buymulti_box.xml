<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/b_buymulti_box"
    android:background="@drawable/bg_card"
    android:layout_margin="2dp"
    android:padding="16dp"
    android:layoutDirection="rtl">

    <!-- Header Text -->
    <TextView
        android:id="@+id/b_buymulti_factor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/customerfactorheader"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:focusable="true" />

    <!-- Input Fields Container -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Amount Input -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/amount"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground" />

            <EditText
                android:id="@+id/b_buymulti_amount"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:background="@drawable/bg_editbox"
                android:gravity="center"
                android:textColor="?attr/colorOnBackground"
                android:hint="@string/amount"
                android:maxLength="4"
                android:inputType="number"
                android:focusable="true"
                android:padding="8dp"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Unit Ratio Input -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/UnitRadio"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground" />

            <EditText
                android:id="@+id/b_buymulti_unitratio"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:background="@drawable/bg_editbox"
                android:textColor="?attr/colorOnBackground"
                android:gravity="center"
                android:hint="@string/UnitRadio"
                android:maxLength="4"
                android:inputType="number"
                android:focusable="true"
                android:padding="8dp"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/b_buymulti_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/detail_buy"
        android:layout_margin="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        />
</androidx.appcompat.widget.LinearLayoutCompat>
