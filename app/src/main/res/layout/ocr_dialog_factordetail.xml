            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="فاکتور : "
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp" />

                    <TextView

                        android:id="@+id/ocr_factordialog_d_factorprivatecode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_editbox"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="تاریخ : "
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/ocr_factordialog_d_factordate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_editbox"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="بایگانی: "
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ocr_factordialog_d_appocrfactorcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_editbox"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="پرینت :"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ocr_factordialog_d_apptcprintref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_editbox"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="منطقه : "
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ocr_factordialog_d_ersall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_editbox"
                        android:gravity="center"

                        android:textSize="22sp"
                        android:textColor="?attr/colorOnBackground"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="مشتری:"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ocr_factordialog_d_customercode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_editbox"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="نام مشتری : "
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ocr_factordialog_d_custName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_editbox"
                        android:gravity="center"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="18sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
